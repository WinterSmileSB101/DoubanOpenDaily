<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hot_author_item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hot_author_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_main_bg"
            android:paddingBottom="@dimen/common_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/common_horizontal_margin"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/drawer_line" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hot_author_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:rounded="http://schemas.android.com/apk/res-auto"
            android:id="@+id/author_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/history_content_title"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@mipmap/ic_empty_light"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/author_img"
            android:gravity="top"
            android:text="@string/app_name"
            android:textColor="@color/content_tile_unread"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/author_label"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/author_name"
            android:layout_toRightOf="@id/author_img"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/content_label_unread"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <View
        android:id="@+id/hot_author_item_sepline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/drawer_line" />

</LinearLayout>
