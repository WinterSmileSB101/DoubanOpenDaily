<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_logon_progress_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/card_common_bg"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin">


    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/common_horizontal_margin"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/dlg_waiting_colors" />


    <TextView
        android:id="@+id/dlg_waiting_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/content_label_readed"
        android:textSize="16sp" />
</LinearLayout>
