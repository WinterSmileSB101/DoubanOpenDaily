<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/history_item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_main_bg"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/drawer_line" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/history_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/catalog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/history_content_catalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/catalog_label_bg"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="4dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/history_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/catalog_layout"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/common_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/app_name"
            android:textColor="@color/content_tile_unread"
            android:textSize="@dimen/text_size_18" />


        <ImageView
            android:id="@+id/history_content_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/history_content_title"
            android:background="@mipmap/ic_empty_light"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/history_content_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_content_title"
            android:layout_toLeftOf="@id/history_content_img"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/app_name"
            android:textColor="@color/content_label_unread"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <View
        android:id="@+id/history_item_sepline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/drawer_line" />

</LinearLayout>
